{
  "name": "gridwatch-net-enterprise",
  "version": "0.3.0",
  "private": true,
  "description": "GridWatch NetEnterprise - Unified Network Management Platform",
  "author": "GridWatch Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "packages/*",
    "services/*",
    "apps/gateway",
    "apps/web-ui"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "prepare": "husky install",
    "db:migrate": "npm run db:migrate -w apps/gateway",
    "db:rollback": "npm run db:rollback -w apps/gateway",
    "db:seed": "npm run db:seed -w apps/gateway",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:infra": "docker compose --profile infra up -d",
    "docker:ipam": "docker compose --profile ipam up -d",
    "docker:npm": "docker compose --profile npm up -d",
    "docker:stig": "docker compose --profile stig up -d",
    "auth:dev": "npm run dev -w services/auth-service",
    "security:audit": "npm audit && turbo run security:audit"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.19.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^6.1.2",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "npm@10.2.5",
  "dependencies": {
    "nats": "^2.29.3"
  }
}
